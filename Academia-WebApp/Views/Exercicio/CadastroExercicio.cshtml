@model ExercicioModel
@{
    ViewData["Title"] = "Cadastrar Exercicio";
}



<h1 class="text-center display-4">Cadastro de Exercicio</h1>

<form asp-controller="Exercicio" asp-action="CadastrarExercicio" method="post">

    <div class="form-group">
        <label for="nome">Nome Do Exercicio</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Supino">
    </div>

    <div class="form-group">
        <label for="nome">Descrição</label>
        <input type="text" asp-for="Descricao" class="form-control" placeholder="Descrição">
    </div>

    <div class="form-group">
        <label for="nome">Musculo Alvo</label>
        <select type="text" asp-for="MusculoAlvo" class="form-control">
            <option value="Peito">Peito</option>
            <option value="Costas">Costas</option>
            <option value="Biceps">Biceps</option>
            <option value="Triceps">Triceps</option>
            <option value="Ombro">Ombro</option>
            <option value="Panturrilha">Panturrilha</option>
            <option value="Gluteo">Gluteo</option>
            <option value="Quadriceps">Quadriceps</option>
            <option value="Posterior">Posterior</option>
            <option value="Antebraço">Antebraço</option>
            <option value="Trapézio">Trapézio</option>
        </select>
    </div>

    <div class="form-group">
        <label for="nome">Equipamento</label>
        <input type="text" asp-for="Equipamento" class="form-control" placeholder="Banco 180°">
    </div>

    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary">Enviar</button>
        <a class="btn btn-secondary btn-block" asp-controller="Exercicio" asp-action="Index" role="button">Voltar</a>
    </div>

</form>